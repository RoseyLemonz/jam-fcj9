script/source = "extends CharacterBody3D

const SPEED = 10.0
const PL_SCALE = 1.25

var CUR_SPEED = SPEED

var pigswitch = 0

func _physics_process(delta: float) -> void:
	
	# Camera controls
	if Input.is_action_pressed(\"keylook_left\"):
		$CameraController.rotate_y(deg_to_rad(2))
	if Input.is_action_pressed(\"keylook_right\"):
		$CameraController.rotate_y(deg_to_rad(-2))
	
	# Add the gravity.
	if not is_on_floor():
		velocity += get_gravity() * delta

	# Get the input direction and handle the movement/deceleration.
	# As good practice, you should replace UI actions with custom gameplay actions.
	var input_dir = Input.get_vector(\"move_left\", \"move_right\", \"move_forward\", \"move_back\")
	var direction = ($CameraController.transform.basis * Vector3(input_dir.x, 0, input_dir.y)).normalized()
	if direction:
		velocity.x = direction.x * CUR_SPEED
		velocity.z = direction.z * CUR_SPEED
	else:
		velocity.x = move_toward(velocity.x, 0, CUR_SPEED)
		velocity.z = move_toward(velocity.z, 0, CUR_SPEED)

	# crouching
	if Input.is_action_just_pressed(\"crouch\"):
		position.y -= 1
		scale.y = PL_SCALE / 2
		CUR_SPEED = SPEED / 2
	if Input.is_action_just_released(\"crouch\"):
		scale.y = PL_SCALE
		CUR_SPEED = SPEED

	move_and_slide()
	# camera
	$CameraController.position.x = position.x
	$CameraController.position.z = position.z
	$CameraController.position.y = position.y + 1.3
	rotation = $CameraController.rotation

# pig sign easter egg
func _on_pig_sign_area_entered(area: Area3D) -> void:
	if (pigswitch == 0):
		$\"../PigSign\".position.y = 2
		pigswitch = 1
	else:
		pass
	
"

